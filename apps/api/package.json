{
  "name": "@seedling-hq/api-app",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20.19.0"
  },
  "scripts": {
    "build": "tsc",
    "dev": "DATABASE_URL=postgresql://postgres:password@localhost:5434/seedling_hq LOG_LEVEL=INFO yarn node dev-server.mjs",
    "dev:serverless": "DATABASE_URL=postgresql://postgres:password@localhost:5434/seedling_hq LOG_LEVEL=INFO serverless offline --config serverless.dev.yml",
    "deploy": "serverless deploy",
    "deploy:dev": "serverless deploy --stage dev",
    "deploy:prod": "serverless deploy --stage prod",
    "lint": "eslint src",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist .serverless",
    "logs": "serverless logs -f",
    "remove": "serverless remove"
  },
  "dependencies": {
    "@aws-lambda-powertools/logger": "^2.0.0",
    "@aws-lambda-powertools/metrics": "^2.0.0",
    "@aws-lambda-powertools/tracer": "^2.0.0",
    "@seedling-hq/core": "workspace:*",
    "@seedling-hq/database-drizzle": "workspace:*",
    "@seedling-hq/ports": "workspace:*",
    "@seedling-hq/use-cases": "workspace:*",
    "cors": "^2.8.5",
    "express": "^4.21.1",
    "nanoid": "^5.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/aws-lambda": "^8.10.0",
    "@types/cors": "^2.8.0",
    "@types/express": "^5.0.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "esbuild": "^0.25.9",
    "eslint": "^8.0.0",
    "serverless": "^3.38.0",
    "serverless-dotenv-plugin": "^6.0.0",
    "serverless-esbuild": "^1.55.1",
    "serverless-offline": "^13.3.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.0.0"
  }
}
