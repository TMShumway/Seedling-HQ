{
  "name": "@seedling/api",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch --env-file=../../.env src/index.ts",
    "build": "tsc",
    "typecheck": "tsc --noEmit -p tsconfig.test.json",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "db:push": "drizzle-kit push",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:seed-test": "tsx --env-file=../../.env src/infra/db/seed-test.ts",
    "db:seed-demo": "tsx --env-file=../../.env src/infra/db/seed-demo.ts",
    "db:reset": "tsx --env-file=../../.env src/infra/db/reset.ts",
    "gen": "tsx --env-file=../../.env src/gen-openapi.ts"
  },
  "dependencies": {
    "@aws-sdk/client-cognito-identity-provider": "^3.988.0",
    "@aws-sdk/client-pinpoint-sms-voice-v2": "^3.990.0",
    "@aws-sdk/client-s3": "^3.989.0",
    "@aws-sdk/client-sqs": "^3.990.0",
    "@aws-sdk/s3-presigned-post": "^3.989.0",
    "@aws-sdk/s3-request-presigner": "^3.989.0",
    "@fastify/cors": "^11.0.0",
    "@fastify/swagger": "^9.4.0",
    "@fastify/swagger-ui": "^5.2.0",
    "@seedling/shared": "workspace:*",
    "drizzle-orm": "^0.38.0",
    "fastify": "^5.2.0",
    "fastify-type-provider-zod": "^4.0.0",
    "jose": "^6.1.3",
    "nodemailer": "^8.0.1",
    "pg": "^8.13.0",
    "pino": "^9.6.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@apidevtools/swagger-parser": "^12.1.0",
    "@types/node": "^22.0.0",
    "@types/nodemailer": "^7.0.9",
    "@types/pg": "^8.11.0",
    "drizzle-kit": "^0.30.0",
    "pino-pretty": "^13.0.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0"
  }
}
