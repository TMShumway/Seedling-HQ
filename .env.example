# Database
DATABASE_URL=postgresql://fsa:fsa@localhost:5432/fsa

# API
API_PORT=4000
NODE_ENV=development

# Auth (local dev mode)
AUTH_MODE=local
DEV_AUTH_TENANT_ID=00000000-0000-0000-0000-000000000001
DEV_AUTH_USER_ID=00000000-0000-0000-0000-000000000010
DEV_AUTH_ROLE=owner

# Notifications
NOTIFICATION_ENABLED=true
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_FROM=noreply@seedling.local

# Secure links
APP_BASE_URL=http://localhost:5173
SECURE_LINK_HMAC_SECRET=dev-secret-change-in-production

# AWS Cognito (populate after CDK deploy — see infra/cdk/)
# AUTH_MODE=cognito
# COGNITO_USER_POOL_ID=us-east-1_XXXXXXXXX
# COGNITO_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxxxxxxx
# COGNITO_REGION=us-east-1

# S3 / LocalStack (photo uploads)
# S3_BUCKET, S3_ENDPOINT, SQS_MESSAGE_QUEUE_URL, SQS_ENDPOINT are auto-generated
# in .env.localstack by scripts/localstack-deploy.sh — do not set them here.
S3_REGION=us-east-1

# SMS / SQS / Worker
SMS_PROVIDER=stub
SMS_REGION=us-east-1
SMS_ORIGINATION_IDENTITY=
SQS_REGION=us-east-1
WORKER_MODE=inline

# Frontend (Vite reads from root .env; only VITE_* vars are exposed)
# VITE_AUTH_MODE=local
# VITE_COGNITO_USER_POOL_ID=us-east-1_XXXXXXXXX
# VITE_COGNITO_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxxxxxxx
